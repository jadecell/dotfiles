[bar/laptop-bar]
monitor = ${env:MONITOR:eDP-1}
monitor-fallback =
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false
separator = /

width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0

underline-size = 3
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}


module-margin-left = 1
module-margin-right = 1

font-0 = SauceCodeProNerdFont:pixelsize=11;
font-1 = HackNerdFont:pixelsize=10;
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
font-3 = IPAGothic:fontformat=truetype:pixelsize=10:antialias=false;

modules-left = bspwm xwindow
modules-right = kernel cpu-usage memory weather volume battery clock

tray-position = right
tray-padding = 1
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = default


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline =
format-background =
format-padding =
format-foreground = ${colors.primary}

[module/bspwm]
type = internal/bspwm

enable-scroll = true
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.primary}
label-empty-padding = 1

format-underline =
format-background =
format-padding =
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

; Separator in between workspaces
label-separator = /

[module/kernel]
type = custom/script
exec = kernel
interval = 3600

[module/pacupdate]
type = custom/script
exec = pacupdate
interval = 3600

[module/up-time]
type = custom/script
exec = upt
format-prefix = "ÔÅ¢ "
interval = 60

[module/volume]
type = custom/script
exec = volume
interval = 1
format-underline = ${colors.red}
label = "%output%"

[module/memory]
type = custom/script
exec = memory
label = "%output%"
click-left = $TERMINAL -e htop &
interval = 10

[module/battery]
type = custom/script
exec = battery
label = "%output%"

[module/cpu-usage]
type = custom/script
exec = cpuperc
label = "%output%"
click-left = $TERMINAL -e htop &
interval = 10

[module/weather]
type = custom/script
exec = weather
label = "%output%"
interval = 1800

[module/clock]
type = custom/script
exec = clock
label = "%output%"
interval = 60

