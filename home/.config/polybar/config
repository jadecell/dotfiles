[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
primary = ${env:WINDOWMANAGER_CUSTOM_COLOR}
alert = ${env:POLYBAR_ALERT_COLOR}

[settings]
format-foreground =
format-underline = ${colors.primary}
format-background = ${colors.background}
format-padding = 1
format-overline =
format-margin = 0
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/main-bar]
monitor = ${env:MONITOR}
monitor-fallback =
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false
separator = /

width = 100%
height = ${env:BAR_HEIGHT}
offset-x = 0
offset-y = 0
radius = 0.0

underline-size = 3
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}


module-margin-left = 1
module-margin-right = 1

font-0 = SauceCodeProNerdFont:pixelsize=10;
font-1 = HackNerdFont:pixelsize=10;
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
font-3 = IPAGothic:fontformat=truetype:pixelsize=10:antialias=false;

modules-left = bspwm xwindow
modules-right = pacupdate cpu-usage memory weather volume up-time clock

tray-position = right
tray-padding = 1
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = default

[bar/alt-bar]
monitor = ${env:MONITOR}
monitor-fallback =
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false
separator = /

width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0

underline-size = 3
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}


module-margin-left = 1
module-margin-right = 1

font-0 = SauceCodeProNerdFont:pixelsize=10;
font-1 = HackNerdFont:pixelsize=10;
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
font-3 = IPAGothic:fontformat=truetype:pixelsize=10:antialias=false;

modules-left = bspwm xwindow
modules-right = kernel cpu-usage memory weather volume up-time clock

tray-position = right
tray-padding = 1
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

