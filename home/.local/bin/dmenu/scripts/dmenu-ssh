#!/usr/bin/env bash

# Source all the settings
. $HOME/.config/dmenu/settings

declare options=("quit
public
private
mccrory.xyz")

choice=$(echo -e "${options[@]}" | dmenu $DMENU_ARGUMENTS -p 'SSH to: ')

priv_con() {
    ssh -p 21000 jadecell@server742.andy10gbit.xyz
}

case "$choice" in
    
    "private")
    $TERMINAL -e connect_private_seedbox
    exit 0
    ;;

    "public")
    $TERMINAL -e ssh "jadecell@dog.seedhost.eu"
    exit 0
    ;;

    quit)
        echo "Program terminated." && exit 1
    ;;
esac

[ -n "$choice" ] && $TERMINAL -e ssh "$(whoami)@$choice"
